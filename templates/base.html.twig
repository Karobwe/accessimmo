<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <title>{% block title %}Welcome!{% endblock %} - Accessimmo</title>
            {% block stylesheets %}
                {% block bootstrap %}
                    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
                {% endblock %}
                {# Theme pour pérsonaliser bootstrap, créer avec https://themestr.app #}
                <link rel="stylesheet" href="{{ asset('assets/css/accessimmo.css') }}" />
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block navbar %}
                <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
                    <a class="navbar-brand" href="{{ path('home') }}">Accessimmo</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#toggleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="toggleNavbar">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('housing_index') }}">Trouver un logement</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            {% endblock %}
            <div class="container-fluid">
                {% block content %}
                    <h1 class="text-primary">This is the base template <ion-icon name="heart"></ion-icon></h1>
                {% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}
            {% block jquery %}
                <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            {% endblock %}

            {% block popper %}
                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            {% endblock %}

            {% block bootstrapjs %}
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
            {% endblock %}
            {% block ionicons %}
                {# Composant Ionic qui fournit des icônes https://ionicons.com/ #}
                <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
            {% endblock %}
        {% endblock %}
    </body>
</html>
