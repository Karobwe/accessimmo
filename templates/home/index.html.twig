{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block content %}
    <div id="home-header" class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="d-flex flex-column align-content-center justify-content-center">
                <div class="row">
                    <div class="col col-md-6">
                        <p class="h3 text-white text-lg-center">Trouver le logement qui vous corrsspond</p>
                    </div>
                    <div class="col col-md-6">
                        {{ render(controller('App\\Controller\\SearchController::searchBar')) }}
                    </div>
                </div>

                <div class="mt-5">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-light btn-lg rounded-0 mx-2 mb-3" type="button" data-toggle="collapse" data-target="#advancedSearch">
                            Recherche avancée
                        </button>

                        <button class="btn btn-outline-light btn-lg rounded-0 mx-2 mb-3" type="button" data-toggle="collapse" data-target="#legacySearch">
                            Recherche primitive
                        </button>
                    </div>
                    {# TODO  Ajouter la classe "collapse" aux div ci-dessous pour par défaut cacher le formulaire #}
                    <div class="collapse" id="advancedSearch">
                        <div class="card card-body">
                            {{ render(controller('App\\Controller\\SearchController::advancedSearch')) }}
                        </div>
                    </div>
                    <div class="" id="legacySearch">
                        <div class="card card-body">
                            {{ render(controller('App\\Controller\\SearchController::legacySearch')) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
