{% extends 'base.html.twig' %}

{% block title %}Housing index{% endblock %}

{% block content %}
    <div class="container">
        <h1>Housing index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>ShortDescription</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>RoomCount</th>
                    <th>BedroomCount</th>
                    <th>FloorArea</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for housing in housings %}
                <tr>
                    <td>{{ housing.id }}</td>
                    <td>{{ housing.shortDescription }}</td>
                    <td>{{ housing.description }}</td>
                    <td>{{ housing.price }}</td>
                    <td>{{ housing.roomCount }}</td>
                    <td>{{ housing.bedroomCount }}</td>
                    <td>{{ housing.floorArea }}</td>
                    <td>
                        <a href="{{ path('housing_show', {'id': housing.id}) }}">show</a>
                        <a href="{{ path('housing_edit', {'id': housing.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('housing_new') }}">Create new</a>
    </div>
{% endblock %}
