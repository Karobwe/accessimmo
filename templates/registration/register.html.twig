{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3 mt-5">
                <div class="card-body bg-light">
                    <div>
                        <h1 class="text-center my-1">Inscription</h1>
                            {{ form_start(registrationForm) }}
                                <div class="form-group">
                                    {{ form_label(registrationForm.firstName, "Prénom :", {'label_attr': {'class': 'col-sm-6 control-label' } }) }}
                            
                                    <div class="col-sm">
                                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder':'Votre prénom '} }) }}
                                    </div>
                                        {% if not form_errors(registrationForm.firstName) == '' %}
                                            <span class='alert alert-warning col-lg-offset-4 col-lg-8 glyphicon glyphicon-warning-sign'>
                                                <span class='error'> {{ form_errors(registrationForm.firstName)|striptags|raw }}</span>
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(registrationForm.lastName, "Nom :", {'label_attr': {'class': 'col-sm-6 control-label' } }) }}
                            
                                    <div class="col-sm">
                                        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder':'Votre nom'} }) }}
                                    </div>
                                        {% if not form_errors(registrationForm.lastName) == '' %}
                                            <span class='alert alert-warning col-lg-offset-4 col-lg-8 glyphicon glyphicon-warning-sign'>
                                                <span class='error'> {{ form_errors(registrationForm.lastName)|striptags|raw }}</span>
                                            </span>
                                        {% endif %}
                                </div>
                                <div class="form-group">
                                    {{ form_label(registrationForm.email, "Email:", {'label_attr': {'class': 'col-sm-6 control-label' } }) }}
                            
                                    <div class="col-sm">
                                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder':'Votre adresse email'} }) }}
                                    </div>
                                        {% if not form_errors(registrationForm.email) == '' %}
                                            <span class='alert alert-warning col-lg-offset-4 col-lg-6 glyphicon glyphicon-warning-sign'>
                                                <span class='error'> {{ form_errors(registrationForm.email)|striptags|raw }}</span>
                                            </span>
                                        {% endif %}
                                </div>
                                <div class="form-group">
                                    {{ form_label(registrationForm.plainPassword, "Mot de passe:", {'label_attr': {'class': 'col-sm-6 control-label' } }) }}
                            
                                    <div class="col-sm">
                                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder':'Votre mot de passe'} }) }}
                                    </div>
                                        {% if not form_errors(registrationForm.plainPassword) == '' %}
                                            <span class='alert alert-warning col-lg-offset-4 col-lg-8 glyphicon glyphicon-warning-sign'>
                                                <span class='error'> {{ form_errors(registrationForm.plainPassword)|striptags|raw }}</span>
                                            </span>
                                        {% endif %}
                                </div>
                                <div class="form-group">
                                    {{ form_label(registrationForm.phone, "Numéro de téléphone:", {'label_attr': {'class': 'col-sm-6 control-label' } }) }}
                            
                                    <div class="col-sm">
                                        {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control', 'placeholder':'Votre numéro de téléphone'} }) }}
                                    </div>
                                        {% if not form_errors(registrationForm.phone) == '' %}
                                            <span class='alert alert-warning col-lg-offset-6 col-lg-8 glyphicon glyphicon-warning-sign'>
                                                <span class='error'> {{ form_errors(registrationForm.phone)|striptags|raw }}</span>
                                            </span>
                                        {% endif %}
                                </div>
                                <div class="form-group">
                                    {{ form_label(registrationForm.adress, "Adresse:", {'label_attr': {'class': 'col-sm-6 control-label' } }) }}
                            
                                    <div class="col-sm">
                                        {{ form_widget(registrationForm.adress, {'attr': {'class': 'form-control', 'placeholder':'Votre adresse'} }) }}
                                    </div>
                                        {% if not form_errors(registrationForm.adress) == '' %}
                                            <span class='alert alert-warning col-lg-offset-4 col-lg-8 glyphicon glyphicon-warning-sign'>
                                                <span class='error'> {{ form_errors(registrationForm.adress)|striptags|raw }}</span>
                                            </span>
                                        {% endif %}
                                </div>
                                <div class="form-group text-center">
                                    {{ form_widget(registrationForm.save, {'attr': {'class': 'btn btn-primary col-lg-2'} }) }}
                                </div>
                            {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}