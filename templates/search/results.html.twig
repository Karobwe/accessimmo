{% extends 'base.html.twig' %}

{% block content %}
    {% for result in results %}
        <div class="card my-5">
            <div class="row no-guutters">
                <div class="col col-md-4">
                    <img src="{{ result.images[0].url }}" alt="{{ result.images[0].alt }}">
                </div>

                <div class="card-body p-3 p-md-5 col col-md-8">
                    <h3 class="card-title">{{ result.type.name }} {{ result.status.name}}</h3>

                    <div class="card-text"> {{ result.shortDescription }}</div>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="row d-flex justify-content-center">
        {{ knp_pagination_render(results) }}
    </div>
{% endblock %}

