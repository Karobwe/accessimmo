{{ form_start(form) }}

    {% if not form.vars.valid %}
        <div class="alert alert-danger row col-12">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-12 col-lg-6 bg-warning">
            <div class="form-group">
                {# <label for="keywords" class="col-12 pl-0">Mots clés</label> #}
                {{ form_label(form.keywords) }}

                {# <input type="text" id="keywords" placeholder="maison, appartement, dijon, auxerre..." class="col-12 form-control form-control-lg"> #}
                {{ form_widget(form.keywords) }}
            </div>

            <div class="form-group">
                {{ form_label(form.types) }}
                {{ form_widget(form.types) }}
            </div>

            <div class="row">
                <p class="col-12">Quel est votre budget?</p>
                <div class="form-group col-12 col-md-6">
                    {{ form_label(form.minPrice) }}
                    {{ form_widget(form.minPrice) }}
                </div>

                <div class="form-group col-12 col-md-6">
                    {{ form_label(form.maxPrice) }}
                    {{ form_widget(form.maxPrice) }}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6 bg-success">
            <div class="form-group">
                {{ form_label(form.sizes) }}
                {{ form_widget(form.sizes) }}
            </div>

            <div class="form-group">
                {{ form_label(form.status) }}
                {{ form_widget(form.status) }}
            </div>

            <div class="row">
                <p class="col-12">Combien d'espace avez-vous besoin ?</p>
                <div class="form-group col-12 col-md-6">
                    {{ form_label(form.minArea) }}
                    {{ form_widget(form.minArea) }}
                </div>

                <div class="form-group col-12 col-md-6">
                    {{ form_label(form.maxArea) }}
                    {{ form_widget(form.maxArea) }}
                </div>
            </div>
        </div>

        <div class="row col-12 d-flex align-content-center justify-content-center mt-4">
            <button type="submit" class="form-control btn btn-primary btn-lg rounded-0 mx-3">
                <span>Trouvez le logement de mes rêves</span>
                <ion-icon name="telescope-outline"></ion-icon>
            </button>
        </div>
    </div>

{{ form_end(form) }}